{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Test configuration - maintains strict rules for TDD methodology
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo-spec",

    // TypeScript 5.8+ bundler configuration for Vite tests
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    // Output configuration
    "outDir": "../../dist/out-tsc",

    // Test-specific relaxations (minimal, following project guidelines)
    // Note: Only relax rules for WebGL mocking, maintain strict elsewhere
    "noUnusedLocals": false, // Allow unused test variables with _ prefix
    "noUnusedParameters": false, // Allow unused test parameters with _ prefix

    // Test-specific types
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest",
      // TODO: Add BabylonJS types for WebGL testing
      "@testing-library/jest-dom" // Testing library types
    ]
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
