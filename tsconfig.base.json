{
  "compilerOptions": {
    // TypeScript 5.8+ Base Configuration
    // Aligned with docs/typescript-guidelines.md and ESLint strict rules
    "target": "ES2022",
    "module": "ESNext", // Compatible with both bundlers and Node.js
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    // Strict type checking - aligned with ESLint rules
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true, // Enhanced type safety for optional properties

    // Additional strict checks for bulletproof-react architecture
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false, // Disabled for dynamic property access
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,

    // Enhanced type safety checks
    "noUncheckedSideEffectImports": true, // TypeScript 5.8+ for safer imports

    // Module resolution and imports
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true, // TypeScript 5.8+ for better import/export handling
    "allowImportingTsExtensions": true,

    // Emit configuration
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true, // Enable for Map.entries() compatibility
    // Note: preserveValueImports and importsNotUsedAsValues are deprecated in TS 5.8
    // Using verbatimModuleSyntax: true instead (set above on line 39)

    // Performance and compatibility
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "noEmit": true,

    // TypeScript 5.8 specific options
    "moduleDetection": "force",

    // Paths and base URL for monorepo
    "baseUrl": "./src",
    "paths": {
      "@/shared": ["shared"],
      "@/shared/*": ["shared/*"],
      "@/features/*": ["features/*"],
      "@/components/*": ["components/*"],
      "@/*": ["*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "playwright-report",
    "test-results",
    "**/*.config.{js,ts,mjs}",
    "public",
    ".vite"
  ]
}
