{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Library build configuration for production
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo-lib",

    // TypeScript 5.8+ bundler configuration for Vite
    "module": "preserve", // TypeScript 5.8+ for modern bundlers
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Output configuration
    "outDir": "../../dist/out-tsc",
    "declarationDir": "../../dist/types",

    // Strict emit settings for library
    "removeComments": true,
    "stripInternal": true,
    "noEmitOnError": true,

    // Library-specific types
    "types": ["node", "vite/client", "@types/three"]
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "references": [
    {
      "path": "../tree-sitter-openscad"
    },
    {
      "path": "../openscad-parser"
    },
    {
      "path": "../openscad-editor/tsconfig.lib.json"
    }
  ]
}
